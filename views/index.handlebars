<div class="row center" id="">
    <div class="col-12">
        <h1>Greetings App</h1>
    </div>

</div>
<div class="row center">
    <div>
            {{#if messages.info}}
        <div class="err">
            <span class="greetText" id="errorMessage">{{messages.info}}</span>
        </div>
        {{/if}}
            </div>
</div>

<div class="row center">
    <div class="col-3"></div>
    <div class="col-6 center">
        <form id="userInput" method="POST" action="/greeted">
            <input id="inputBox" name="Names" type="" placeholder="Type in your name here" pattern="[a-zA-Z]+"
                title="Please enter only letters A-Z">

            <br>
            <div class="in-block col-12 radio-toolbar">

                <input type="radio" name="languageRadio" class="langRadio" value="english" id="1">

                <label for="1"></label>
                <span>English | </span>
                <input type="radio" name="languageRadio" class="langRadio" value="isiZulu" id="2">

                <label for="2"></label>
                <span>isiZulu | </span>
                <input type="radio" name="languageRadio" class="langRadio" value="xiTsonga" id="3">
                <label for="3"></label>
                <span>xiTsonga</span>
            </div>
        </form>
    </div>
    <div class="col-3"></div>
</div>

<div class="row center">
</div>

<div class="row center ">
    <div class="col-6" id="greetBox">

    </div>

</div>
<div class="row center">
    <div class="col-12 center" id="greetBox">
        <button id="greetBtn" type="submit" form="userInput" value="submit">
            <strong>Greet!</strong>
        </button>
    </div>
</div>

</div>
<div class="entry">
</div>
<div class="center">
    <p id="counter-p">
        <div>
    <h3><span class="greetText">{{greeting}}</span></h3>
        </div>
        <strong>
            <span id="countNumber">{{counter}}</span> user(s) have been greeted on this app.
        </strong>
    </p>
</div>